<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Date_Time_Rule</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(ISBLANK( End__c ))  &amp;&amp; (Start__c  &gt;=  End__c)</errorConditionFormula>
    <errorDisplayField>End__c</errorDisplayField>
    <errorMessage>End Date/Time must be at-least 1 day ahead of Start Date/Time</errorMessage>
</ValidationRule>
